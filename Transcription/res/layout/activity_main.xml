<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp"
    android:background="@drawable/ldpi_normal"
    tools:context=".InAppPurchase" >

   
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
         android:background="@drawable/shape"
        android:radius="50dp"
        android:alpha="0.7"
        android:orientation="vertical" >
        
    <TextView
        android:id="@+id/txtwelcome"
       android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:text="You are logged in as"
        android:textSize="15sp"
        android:gravity="center" />
    
    <TextView
        android:id="@+id/textViewOutput"
         android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_below="@+id/txtwelcome"
        android:layout_centerHorizontal="true"
        android:text="" 
        android:textSize="18sp"
        android:gravity="center"
        android:paddingBottom="20dp" />
    
    <Button android:id="@+id/credits" 
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"        
        android:layout_width="fill_parent"
        android:layout_height="37dp"
        android:background="@drawable/register_button"
        android:textColor="#666666"
        android:textSize="14sp" 
        android:text="Show Credits Detail" />
    
         <TextView
        android:id="@+id/tvCredits"
         android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_below="@+id/txtwelcome"
        android:layout_centerHorizontal="true"
        android:text="No Credits" 
        android:textSize="13sp"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingTop="20dp" />
         
         <Button
        android:id="@+id/btnBuyCredits"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"        
        android:layout_width="fill_parent"
        android:layout_height="37dp"
        android:background="@drawable/login_button"
        android:textColor="#FFFFFF"
        android:textSize="14sp" 
          android:text="Buy Credits"/>
         
         <Button android:id="@+id/logout" 
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"        
        android:layout_width="fill_parent"
        android:layout_height="37dp"
        android:background="@drawable/register_button"
        android:textColor="#666666"
        android:textSize="14sp" 
        android:text="Logout" />

        
    <EditText android:id="@+id/etUsername" 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:ems="10" 
        android:textSize="14sp"
        android:gravity="center"
        android:hint="Enter E-mail" 
        android:inputType="textPersonName">

        <requestFocus />
    </EditText>
    
    <EditText android:id="@+id/etPassword" 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:ems="10" 
        android:textSize="14sp"
        android:gravity="center"
        android:hint="Enter Password" 
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"        
        android:layout_width="fill_parent"
        android:layout_height="37dp"
        android:background="@drawable/login_button"
        android:textColor="#FFFFFF"
        android:textSize="14sp" 
          android:text="Login"/>

    <TextView 
        android:id="@+id/textView1" 
        android:gravity="center"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:textSize="12sp"
        android:textColor="#666666"
        android:text="Register now and receive \ntranscripts in your email." 
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginBottom="20dp"
           android:layout_marginTop="30dp" />
    
    <Button android:id="@+id/btnSave" 
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"        
        android:layout_width="fill_parent"
        android:layout_height="37dp"
        android:background="@drawable/register_button"
        android:textColor="#666666"
        android:textSize="14sp" 
        android:text="Register" />
    <TextView 
        android:id="@+id/tvtabs" 
        android:gravity="center"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:textSize="12sp"
        android:textColor="#666666"
        android:text="Click tabs if you do not wish to register." 
        android:textAppearance="?android:attr/textAppearanceSmall"
    
           android:layout_marginTop="37dp" />
    
    <Button android:id="@+id/btnLoad" 
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"        
        android:layout_width="fill_parent"
        android:layout_height="37dp"
        android:background="@drawable/register_button"
        android:textColor="#666666"
        android:textSize="14sp"
        android:text="Show Credits"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnlogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:visibility="gone" />

    <ListView
        android:id="@+id/lstAllUsers"
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:visibility="gone" >
    </ListView>

</LinearLayout>

</LinearLayout>
