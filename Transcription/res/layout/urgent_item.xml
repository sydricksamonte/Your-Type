<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="horizontal" 
    android:padding="10dp" >

    <com.parse.ParseImageView
        android:id="@+id/icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:visibility="gone" />
    
     <TextView
        android:id="@+id/refID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reference ID#"
        android:paddingTop="5dp"/>
     
   

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/refID"
        android:textColor="#000"

        android:paddingTop="5dp"/>
    

    
     <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/icon"
        android:layout_below="@+id/text1"
        android:textColor="#000"
        android:textStyle="bold"
        android:paddingTop="1dp" />
     
      <TextView
        android:id="@+id/timeLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_toRightOf="@id/text2"
        android:layout_alignTop="@+id/text1"
        android:paddingTop="30dp"/>
     
     	<TextView
        android:id="@+id/lblType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transaction type: "
        android:textColor="#000"
        android:layout_below="@+id/text2"
        android:paddingTop="1dp"
       />
     	
        <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#2980b9"
        android:layout_toRightOf="@id/lblType"
        android:layout_below="@+id/text2"
        android:paddingLeft="2dp"
        android:paddingTop="1dp" />

       	<TextView
        android:id="@+id/lblDateP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purchased on: "
        android:textColor="#000"
        android:layout_below="@+id/lblType"
        android:paddingTop="1dp"
       	/>
        
    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_toRightOf="@id/lblDateP"
        android:layout_below="@+id/lblType"
        android:paddingLeft="2dp"
        android:paddingTop="1dp"
        android:paddingBottom ="5dp" />

</RelativeLayout>