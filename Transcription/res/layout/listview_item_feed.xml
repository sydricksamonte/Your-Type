<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="horizontal" 
    android:padding="10dp" >
    
    <TextView 
        android:id="@+id/recId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"    
        android:layout_centerVertical="true" 
    	android:visibility="gone" />
    
     <TextView 
        android:id="@+id/recName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"  
        style="@android:style/TextAppearance.Medium" 
         />
         
      <TextView 
        android:id="@+id/recStat"
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"    
   
        android:layout_marginTop="16sp"
        android:layout_below="@id/recName"
        android:visibility="gone"
       	
         />
     
     <TextView 
        android:id="@+id/recStatDesc"
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"    
        android:layout_marginTop="2sp"
        android:layout_below="@id/recName"
	    android:drawableLeft="@drawable/stat_circle"
		android:drawablePadding="3dip"
		style="@android:style/TextAppearance.Small"
	/>
     <TextView 
        android:id="@+id/recDateAdd"
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"    
        android:layout_marginTop="2sp"
        android:layout_below="@id/recStatDesc"
        style="@android:style/TextAppearance.Small"
    />
    
      	<TextView 
        android:id="@+id/recDurat"
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"    
        android:layout_marginTop="2sp"
        android:layout_below="@id/recStatDesc"
        style="@android:style/TextAppearance.Small"
        />
        
      <TextView 
        android:id="@+id/recDateFin"
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"    
        android:layout_centerVertical="true"
      	android:visibility="gone" />
      
   	<TextView 
        android:id="@+id/recDateUploaded"
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"    
        android:layout_centerVertical="true" 
        android:visibility="gone"/>
   	
   
   	
   	<TextView 
        android:id="@+id/recFileType"
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"    
        android:layout_centerVertical="true" 
        android:visibility="gone"/>
   	
   	<TextView 
        android:id="@+id/recIsActive"
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"    
        android:layout_centerVertical="true"
        android:visibility="gone" />
   	
   	<TextView 
        android:id="@+id/recOrigin"
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"    
        android:layout_centerVertical="true" 
        android:visibility="gone"/>
        
 	<TextView 
        android:id="@+id/recPath"
       	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"    
        android:layout_centerVertical="true" 
        android:visibility="gone"
       />
   	
   		
     	 
    <!-- <TextView 
        android:id="@+id/name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"  
        android:layout_toRightOf="@id/recId"                
        android:layout_centerVertical="true" />
    
    <TextView 
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        android:layout_toRightOf="@id/name"
        android:layout_centerVertical="true" />
     -->
</RelativeLayout>